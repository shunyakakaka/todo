<div class="ui aligned right header">
  <%= link_to "一覧", boards_path, class: "ui button" %>
  <%= link_to "編集", edit_board_path(@board), class: "ui button" %>
</div>
<% if flash[:notice] %>
  <div class="ui success message ui center aligned header">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= render partial: "board", object: @board %>

<div class="ui comments">
  <h4>コメント</h4>
  <%= render @board.comments %>
</div>
<%= render partial: "comments/form", locals: {comment: @comment} %>