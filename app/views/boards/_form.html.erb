<%= render "shared/error_messages"%>
<div class="ui form">
  <% if board.id %>
    <%= form_with model: board, url: board_path(board.id), method: :patch do |f|%>
      <div class="field">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name%>
      </div>
      <div class="field">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title%>
      </div>
      <div class="field">
        <%= f.label :body, "本文" %>
        <%= f.text_area :body, rows: "15" %>
      </div>
      <div class="field">
        <p>タグ</p>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name ) do |tag| %>
          <div class="ui checkbox">
            <%= tag.check_box class: "checkbox" %>
            <%= tag.label %>
          </div>
        <% end %>
      </div>
      <%= f.submit "保存", class: "ui button blue"%>
    <% end %>
  <% else %>
    <%= form_with model: board, url: boards_path do |f|%>
      <div class="field">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name%>
      </div>
      <div class="field">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title%>
      </div>
      <div class="field">
        <%= f.label :body, "本文" %>
        <%= f.text_area :body, rows: "15" %>
      </div>
      <div class="field">
        <p>タグ</p>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name ) do |tag| %>
          <div class="ui checkbox">
            <%= tag.check_box class: "checkbox" %>
            <%= tag.label %>
          </div>
        <% end %>
      </div>
      <%= f.submit "保存", class: "ui button blue"%>
    <% end %>
  <% end %>
</div>
